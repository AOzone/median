footer
  font-family Work Sans Light
  background-color background-blue-color
  min-height 320px
  width 100%
  position absolute
  bottom 0
  left 0
  line-height 1.6rem
  color light-text-color

.footer-logo
  position absolute
  top unit * 2
  left unit * 2

  svg, svg path
    fill light-text-color !important

.footer-nav
  position absolute
  bottom unit * 2
  left unit * 2

  ul
    inline-list unit * 2
    text-transform uppercase

.footer-arena-credit
  width 300px
  position absolute
  right unit * 2
  bottom unit * 2
  text-transform uppercase

.footer-right-credit
  width 300px
  position absolute
  right unit * 2
  top unit * 2
