section.blog
  .section-header
    border-top none
    border-bottom none

  .home-contributor
    display inline-block
    font-size 2.6rem

    &:after
      display inline-block
      content ', '
      margin-right (unit/2)

    &:last-child:after
      content ''

    +below(768px)
      display inline-block
      font-size 1.6rem
      word-break break-word
