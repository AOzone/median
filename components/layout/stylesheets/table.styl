table
  table(striped: false, condensed: true, border: false)
  &.is-large tbody
    h2()
  td
    padding unit
    line-height normal
    border-top 1px solid border-color
    text-align right
  td:nth-child(1)
    text-align left
    padding-left 0
  td:nth-child(2)
    text-align left
  td:last-child
    padding-right 0
  tbody tr
    cursor pointer
  tbody +quantity-at-least(2, tr)
    &:hover
      background-color darken(background-color, 3%)
  tbody tr.is-active
    .is-not-displayed
      display block
  p
    p()