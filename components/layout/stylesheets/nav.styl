@import 'variables'

nav
  nav 1 background-color text-color true
  top 0
  background transparent
  padding unit
  height auto
  box-shadow 1px 1px rgba(0,0,0,0)
  border-bottom none
  h1
    font-size 1.8rem
    margin 0
    font-weight normal
  ul
    padding 0
    text-align right
  .nav--right h1
    font-weight normal

body.is-dark
  nav, nav h1, nav a
    color light-text-color !important
  .nav__mark > h1
    border 1px solid rgba(255,255,255, 0.5)

.nav__mark
  padding unit
  width 100%
  text-align center
  position absolute
  left 0
  top 0
  height 100%
  pointer-events none
  > h1
    display inline-block
    float none
    border-radius 50%
    border 1px solid rgba(0,0,0, 0.5)
    padding 10px 24px
    pointer-events all

.nav__menu
  transition 0.5s
  opacity 0
  width 100%
  height auto
  position fixed
  z-index z-index-menu
  top 0
  left 0
  padding 20px
  background background-blue-color
  visibility hidden
  color light-text-color
  > ul
    reset-list()
    text-align left
    float none
  ul li a, h1
    color light-text-color

    &:hover
      color darken(light-text-color, 20%)

.nav__left
  float left
  h1
    cursor pointer
    float none
    hover-lighten 30%
  &:hover .nav__menu
    transition opacity 0.2s
    opacity 1
    visibility visible

.user_menu__overlay
  transition 0.2s
  opacity 0
  width unit * 18
  height 100%
  position fixed
  z-index z-index-menu
  top 0
  right 0
  background background-blue-color
  text-align center
  visibility hidden
  color light-text-color

.user_menu:hover .user_menu__overlay
  transition opacity 0.2s
  opacity 1
  visibility visible

.user_menu__overlay .user_menu__inner
  position relative
  height 100%
  width 100%
  text-transform uppercase

.user_menu__overlay .user_menu__portfolio
  position absolute
  width 100%
  top unit
  left 0
  padding unit

  a
    color light-text-color

.portfolio-stat__value
  margin (unit  * 2) 0 0
  font-weight normal
  font-family Work Sans Thin

.portfolio-stat__label
  color darken(light-text-color, 40%)

.user_menu__bottom
  position absolute
  width 100%
  bottom 0
  left 0
  padding unit
  border-top 1px solid lighten(background-blue-color, 10%)

  a
    color darken(light-text-color, 20%)

