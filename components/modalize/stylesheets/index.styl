
.modalize
  z-index z-index-modal
  transition opacity 0.25s
  opacity 0

  // Fade transition
  &[data-state='open']
  &.is-open
    opacity 1
    > .modalize-backdrop > .modalize-dialog
      // Avoid transitioning the initial open
      transition opacity 0.25s, width 0

  // Loading state
  &.is-loading
    .modalize-backdrop::before
      display block
      content ''
      // spinner(20px, 5px, white)

    .modalize-dialog
      opacity 0

.modalize
.modalize-backdrop
  position fixed
  top 0
  right 0
  bottom 0
  left 0

.modalize-backdrop
  display flex
  align-items center
  background-color rgba(black, 0.75)

.has-nobackdrop > .modalize-backdrop
  background-color transparent

.modalize-dialog
  position relative
  margin 0 auto
  text-align left
  // overflow-y auto
  -webkit-overflow-scrolling touch
  background-color background-blue-color
  height 100%
  width 100%

  &.is-notransition
    transition none !important

.modalize-close
  position absolute
  top 25px
  right 25px
  cursor pointer
  transition opacity 0.25s
  opacity 0.85
  z-index 2
  color light-text-color
  font-size 26px
  line-height @font-size
  prevent-content-shift()
  &:hover
    opacity 1

.modalize-body
  height 100%
  min-height 100%
  overflow-y auto
  -webkit-overflow-scrolling touch

// Dialog transitions
// ------------------
.modalize-dialog
  transition opacity 0.25s, transform 0.5s

  // Fade in/out
  // Transition duration: 250ms
  &[data-state='fade-out']
  &.is-fade-out
    opacity 0
  &[data-state='fade-in']
  &.is-fade-in
    opacity 1

  // Slide in/out
  // Transition duration: 500ms
  &[data-state='slide-out']
  &.is-slide-out
    transform translateY(100px)
    opacity 0
  &[data-state='slide-in']
  &.is-slide-in
    transform translateY(0)
    opacity 1
