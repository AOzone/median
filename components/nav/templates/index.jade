mixin nav-overlay-menu-item(name, href)
  a.nav-overlay-menu-item( href= href )
    span Åzone
    = ' '
    span
      = name

.nav-overlay.js-nav-overlay
  .nav-overlay-backdrop.js-nav-overlay-close
    //-
  nav.nav-overlay-menu
    +nav-overlay-menu-item( 'Futures Market', '/' )
    +nav-overlay-menu-item( 'Investing', '/investing' )
    +nav-overlay-menu-item( 'Hot Tips', '/tips' )
    +nav-overlay-menu-item( 'Leaders', '/leaderboard' )
    +nav-overlay-menu-item( 'Contributors', '/contributors' )
    +nav-overlay-menu-item( 'Review', '/review' )
    +nav-overlay-menu-item( 'Overview', '/overview' )
  a.nav-overlay-close.js-nav-overlay-close
    | ×

nav.nav
  .nav-cell.nav-header
    a.js-nav-overlay-open
      | Åzone
      = ' '
      span= pageTitle
      include ../../../public/images/chevron-down.svg

  .nav-cell
    .nav-mark
      a(href="/")
        include ../../../public/images/A_logo_40px.svg

  if user
    .nav-cell.nav-header
      if isActive("/portfolio/" + user.get('username'))
        a.nav-logout( href="/logout" ) Log out
      else
        a( href="/portfolio/#{user.get('username')}" )
          | #{user.get('username')}&nbsp;&nbsp;&nbsp;#{user.formatBalance()}
  else
    .nav-cell.nav-sub
      a( href='/signup' )
        | Sign Up
      a( href='/login' )
        | Log In
