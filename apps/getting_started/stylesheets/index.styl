.fullscreen-background
  width 100%
  height 100%
  background-position center center
  background-size cover
  position absolute
  top 0
  left 0

.fullscreen-background--one
  background-image url('/images/azone-investing.gif')

.fullscreen-background--two
  background-image url('/images/azone-trading.gif')

.fullscreen-background--three
  background-image url('/images/azone-contributors.gif')

.getting-started
  position absolute
  top 0
  left 0
  height 100%
  width 100%
  background-color alpha(background-blue-color, 0.7)
  color light-text-color

  a
    color light-text-color

.getting-started-copy
  width 50%
  margin 0 auto

  h1, h3
    font-family Work Sans

  +below(768px)
    width 65%
    h1
      h3()

    h3
      h6()

.getting-started-button
  text-align center
  padding-top (unit * 2)

.arrow
  font-family Helvetica
  font-size 4rem

  +below(768px)
    font-size 2rem

.left-arrow
  position absolute
  top 50%
  left 10%

  +below(768px)
    left 5%

.right-arrow
  position absolute
  top 50%
  right 10%

  +below(768px)
    right 5%
