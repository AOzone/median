.landing-outer, .landing-overlay-outer
  height 120vh
  width 100%
  position relative
  margin-top -(unit * 8)

.landing-overlay-outer
  position absolute
  height 100vh
  top 0
  margin-top 0
  width 100%

.landing-overlay-outer h2
  vertically-align()
  text-align center
  width 40%
  margin 0 auto

.section-header
  padding (unit * 3) 0
  display flex
  font-size 1.8rem
.section-header__title
  flex 1
  text-align center
.section-header__description
  flex 1
  padding-right 20%
  > a
    opacity 0.5

@import 'about'
