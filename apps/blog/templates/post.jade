.blog-post
  if post.get('featured_image')
    a(href="/blog/" + post.get('slug'))
      .blog-post__header-image(style="background-image: url(#{post.get('featured_image')}?w=1400)")
  .blog-post__container
    h1.blog-post__title=post.get('title')

    .blog-post__main
      .blog-post__date=post.getFormattedDate()

      .blog-post__content!=post.get('content')

      .blog-post__meta
        .blog-post__tags
          for tag in post.get('tags')
            .call-sign(data-contract_id=tag.name)
              .call-sign__icon
                include ../../../public/images/callsign.svg
              a.call-sign__id(href="/investing/futures/" + tag.name)=tag.name

        .blog-post__author
          .blog-post__author__name=post.get('author').first_name + ' ' + post.get('author').last_name
          .blog-post__author__description=post.getAuthorDescription()
