table
  table(striped: false, condensed: true, border: false)
  &.is-large tbody
    h2()
  td
    padding unit
    line-height normal
    border-top 1px solid darken(background-color, 10%)
    text-align right
  td:nth-child(1)
    text-align left
  td:nth-child(2)
    text-align left
  tbody tr:hover
    background-color darken(background-color, 3%)
  tbody tr:nth-child(1)
    .is-not-displayed
      display block
  p
    p()