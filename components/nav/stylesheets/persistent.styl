.nav
  display flex
  justify-content space-between
  align-items center
  position fixed
  top 0
  right 0
  left 0
  z-index z-index-menu
  padding 40px

.nav-cell
  width (100% / 3)
  text-align center

.nav-header
  font-size 1.8rem
  +below(768px)
    font-size 1.2rem

.nav-mark
  display inline-block
  border-radius 50%
  border 2px solid black
  width 50px
  height @width
  line-height @width - 2
  text-align center
  font-size 1.5rem
  font-weight bold
  +below(768px)
    display none

.nav-sub
  > a
    display inline-block
    padding 20px
    text-transform uppercase
    font-size 0.9rem
    letter-spacing 1px
    transition opacity 0.25s
    &:hover
      opacity 0.5
    +below(768px)
      display block
      padding 0
