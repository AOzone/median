.grid--news
  clearfix()
  height auto

.news____grid-item
  column(1/4, cycle: 4)
  height 300px
  color text-color
  border 1px solid border-color
  border-radius 4px
  margin-bottom 3%
  text-align left
  padding unit
  cursor pointer
  transition all 0.2s ease-in-out-sine
  position relative

  &:hover
    background-color darken(background-grey-color, 10%)

  &.is-selected
    background-color darken(background-grey-color, 30%)

  &.is-disabled
    pointer-events none

  +above(1300px)
    column(1/5, cycle: 5, uncycle: 4)
    text-align left

  +below(900px)
    column(1/3, cycle: 3, uncycle: 4)
    text-align left

  +below(700px)
    column(1/2, cycle: 2, uncycle: 3)
    text-align left

  +below(500px)
    column(1, cycle: 1, uncycle: 2)
    text-align left

.news__grid-item__title
  font-family Atlas Typewriter Bold
  font-size 1.1rem

  +below(700px)
    font-size .9rem

.news____grid-item--add
  background-color darken(background-grey-color, 30%)

.news__grid-item__meta
  position absolute
  bottom unit
  left unit
  word-break break-all
  padding-right unit

  &:hover
    opacity 0.8
