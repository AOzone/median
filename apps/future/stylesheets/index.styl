.confirm-transaction
  &:first-letter
    text-transform capitalize

.container--contract
  background background-color

.contract__callsign
  width 10%
  float left

  .call-sign__id
    border-color black
    font-size 1.4rem

.contract__copy
  width 50%
  float left
  font-size 1.2rem
  vertical-align top

  h2
    margin-top 0
    font-family Atlas Typewriter Bold

.contract__meta
  margin-top (unit * 2)

.contract__value
  float left
  margin-right (unit * 2)

.contract__tick-chart
  padding (unit * 2) 0

.contract--transactions
  margin (unit * 2) 0

.contract__news
  padding-top (unit * 2)

.news__item__title
  font-family Atlas Typewriter Bold

.list-group--blocks
  .list-group-item p
    display none

  .list-group-item h1
    padding 4px 0

  .list-group-item.is-active p
    display block

  .list-group-item.is-active h1
    border-bottom 1px solid #eee

.container--order
  height 100%

.container--order__confirm
  vertically-align()