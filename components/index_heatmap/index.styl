#index-heatmap-key
  position absolute
  height 100vh
  top 0
  margin-top 0
  width 100%

.index-heatmap, .index-overlay-outer
  position absolute
  width 100%
  height 100%
  top 0
  left 0

#index-heatmap
  opacity 0
  transition opacity 0.3s

  &.is-visible
    opacity 1

.heatmap-key
  position absolute
  color text-color
  font-size 1.2rem
  h5()
  h5
    font-family Atlas Typewriter Regular

.heatmap-key__x1
  // left center
  height 100%
  text-align center
  left unit

  h5
    vertically-align()
    transform rotate(-90deg)

  +below(900px)
    top (unit * 2)

.heatmap-key__x2
  // right center
  height 100%
  text-align center
  right unit

  h5
    vertically-align()
    transform rotate(90deg)

  +below(900px)
    top (unit * 2)

.heatmap-key__y1
  // bottom center
  bottom unit
  width 100%
  text-align center

  +below(900px)
    bottom 0

.heatmap-key__y2
  // top center
  top (unit * 4)
  width 100%
  text-align center

  +below(900px)
    top (unit * 8)
