
.future-circles.future-circles--bigboard
  margin-top 192px
  margin-left 160px

  .future-circle
    column(1/9, uncycle: 5, cycle: 9)
    height 175px
    opacity 0.2

    &.row--1
      height 220px

    &.row--2
      height 118px

    &.row--3
      height 198px

    &.is-highlighted
      opacity 1

    &:nth-child(9n + 1)
      margin-left 3px

    &:nth-child(9n + 2)
      margin-left -5px

    &:nth-child(9n + 3)
      margin-left -9px

    &:nth-child(9n + 4)
      margin-left -8px

    &:nth-child(9n + 5)
      margin-left -5px

    &:nth-child(9n + 6)
      margin-left -8px

    &:nth-child(9n + 7)
      margin-left -3px

    &:nth-child(9n + 8)
      margin-left -5px

    &:nth-child(9n)
      float left
      margin-left -7px

  &.all-highlighted .future-circle
    opacity 1
