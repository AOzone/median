@import 'variables'

nav
  nav 1 background-color text-color true
  top 0
  background transparent
  padding unit
  height auto
  box-shadow 1px 1px rgba(0,0,0,0)
  border-bottom none
  h1
    font-size 1.8rem
    margin 0
  ul
    padding 0
    text-align right
  .nav--right h1
    font-weight normal

.nav__mark
  padding unit
  width 100%
  text-align center
  position absolute
  left 0
  top 0
  height 100%
  pointer-events none
  > h1
    display inline-block
    float none
    border-radius 50%
    border 1px solid rgba(0,0,0, 0.1)
    background-color background-color
    padding 10px 24px
    pointer-events all

.nav__menu
  display none
  width 30%
  height 100%
  position fixed
  z-index z-index-menu
  top 0
  left 0
  padding 20px
  background-color darken(background-color, 10%)

  > ul
    reset-list()
    text-align left
    float none

.nav__left
  float left
  h1
    cursor pointer
    float none
    hover-lighten 30%
  &:hover .nav__menu
    display block