@import 'variables'

normalize-css()

body
  color text-color
  background background-color

*
  box-sizing border-box

main
  margin 80px 0

.container
  width 90%
  margin 0 auto

.flash
  flash()

p
  paragraph()

.section-header
  padding 4px 0
  border-top 1px solid #eee
  border-bottom 1px solid #eee

[class^='js-']
  cursor pointer

a, a:hover, a:visited
  color text-color
  text-decoration none

@import 'fonts'
@import 'util'
@import 'form'
@import 'nav'
