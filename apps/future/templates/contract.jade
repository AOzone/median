extends ../../../components/layout/templates/index

block vars
  - pageTitle = contract.get('contract')
  - mainStyle = "background-color:#" + bgColor
  - bodyClass = 'is-light-nav'

block body
  section.contract__about
    .contract__callsign
      a.call-sign(
        class='call-sign--sm'
        data-contract_id=contract.get('contract')
        data-contract_gain=contract.get('gain_percent')
        data-show_border="true"
        href=contract.href()
      )
        .call-sign__icon
          include ../../../public/images/callsign.svg
        .call-sign__id
          .v-outer
            .v-inner #{contract.get('contract')}
    .contract__copy
      h2.contract__title= contract.get('title')
      .contract__abstract= contract.get('abstract')
      .contract__meta
        .contract__value
          .contract__meta__label Value
          h3.contract__meta__value #{contract.formattedPrice('bid')}
        .contract__value
          .contract__meta__label Gain
          h3.contract__meta__value #{contract.formattedGain()}
  section.contract__tick-chart
    #chart
      //- rendered via client
  .container.container--contract
    section.contract__news
      include ../../../components/news_list/templates/index

block scripts
  script( src=asset('/assets/contract.js') )
