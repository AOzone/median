.terminal-ticker
  margin-top 150px

  .contract-ticker
    height 25vh

  .contract-ticker--news
    margin-top -150px

  span.ticker-contract-title
    color white
    font-size 4rem

  .marquee-rtl--contract-ticker
    animation marquee-rtl 200s linear infinite

  .ticket-contract-source
    color rgba(255,255,255, 0.5)
    margin-left (unit * 2)
    font-size 4rem

  .ticket-contract-gain
    font-size 4rem

  .terminal-ticker-overlay
    width 100%
    height 100%
    position absolute
    top 0
    left 0
    background-image linear-gradient(-90deg, #000000  0%, rgba(0,0,0,0.00) 15%, rgba(0,0,0,0.00) 75%, #000000  100%)

