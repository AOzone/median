
.future-circles.future-circles--bigboard
  margin-top 197px
  margin-left 158px

  .future-circle
    column(1/9, uncycle: 5, cycle: 9)
    height 175px

    &.row--1
      height 218px

    &.row--2
      height 120px

    &.row--3
      height 198px

    &.is-highlighted
      border 1px solid #fff

    &:nth-child(9n + 1)
      margin-left -2px

    &:nth-child(9n + 3)
      margin-left -8px

    &:nth-child(9n + 4)
      margin-left -8px

    // &:nth-child(9n + 5)
    //   margin-left

    &:nth-child(9n + 6)
      margin-left -8px

    &:nth-child(9n + 7)
      margin-left -3px

    &:nth-child(9n + 8)
      margin-left -3px

    &:nth-child(9n)
      float left
      margin-left -3px
