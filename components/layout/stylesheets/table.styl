table
  table(striped: false, condensed: true, border: false)
  margin 0
  padding-bottom 18px
  font-family Atlas Typewriter Regular
  &.is-large tbody
    h2()
    font-weight normal
  td
    padding unit * 2
    line-height normal
    border-top 1px solid border-color
    text-align right
  td:nth-child(1)
    text-align left
    padding-left 0
  td:nth-child(2)
    text-align left
  td:last-child
    padding-right 0
  tbody tr
    cursor pointer
  tbody +quantity-at-least(2, tr)
    &:hover
      background-color darken(background-color, 3%)
  tbody tr.is-active
    .is-not-displayed
      display block
  p
    p()
    margin-top unit * 2
    font-size 1.1rem
    font-family Work Sans