.future-title
  font-family Atlas Typewriter Regular

.portfolio-list__position
  .call-sign__icon
    svg path
      fill #fff
  td
    vertical-align middle

.container--portfolio-bio
  margin-top -(unit * 8)
  height 80vh

  +below(900px)
    margin-top 0
    height auto
    padding-bottom (unit * 2)

.portfolio-stats
  margin-top unit * 4

  +below(900px)
    margin-top unit

.portfolio-stat
  display inline-block
  margin 0 (unit * 2)

  +below(900px)
    margin-bottom unit

.portfolio-stat__value
  font-size 3.5rem
  margin-bottom unit

  +below(900px)
    margin-bottom 0
    font-size 2.5rem

.portfolio-stat__label
  text-transform uppercase
  opacity 0.7

#portfolio-treemap
  width 100%
  height 90vh
  position relative
  margin-bottom (unit * 2)

table.portfolio-list.account-list
  td:first-child
    text-align left
  td:last-child
    text-align right
  td:nth-child(3)
    width 50%

  +below(768px)
    td:last-child
      text-align left

.node
  overflow hidden
  position absolute
  padding-left unit
  h1
    font-size 38.4px
    font-size 2.4rem
    text-rendering optimizelegibility
    margin -0.25em 0
    line-height 1.6em
  h5
    font-family Atlas Typewriter Regular
    font-size 16px
    font-size 1rem
    text-rendering optimizelegibility
    border-bottom 1px solid transparent
    display inline-block
    margin 1em 0
    line-height 1.6em
    &:hover
      border-bottom 1px solid border-color

@import 'alerts'
@import 'goods'
